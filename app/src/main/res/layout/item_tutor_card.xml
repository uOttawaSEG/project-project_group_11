<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp"
    android:padding="16dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tutorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutor Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tutorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textSize="14sp"
        android:textColor="#616161"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tutorProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program"
        android:textSize="14sp"
        android:textColor="#616161"
        android:paddingBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <RatingBar
            android:id="@+id/tutorRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:rating="0"
            android:isIndicator="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/tutorRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No ratings"
            android:textSize="13sp"
            android:textColor="#616161"
            android:paddingStart="4dp" />

    </LinearLayout>

    <Button
        android:id="@+id/viewAvailabilityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Availability"
        android:textColor="@android:color/white"
        android:backgroundTint="#9575CD" />

    <LinearLayout
        android:id="@+id/availabilityContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp" />

</LinearLayout>
